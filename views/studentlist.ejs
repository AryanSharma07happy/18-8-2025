<%- include("./base/header.ejs") %>
<%- include("./base/nav.ejs") %>
 <div class="container">
    <div class="alert bg-primary text-white text-center my-3"> 
        <h2>STUDENT LIST</h2>
      </div>  
 </div>
 <div class="container">
    <table class="table text-center">
        <thread>
            <tr>
                <th>Student Photo</th>
                <th>Roll No</th>
                <th>Student Name</th>
                <th>Father Name</th>
                <th>Mother Name</th>
                <th>Course</th>
                <th>Branch</th>
                <th>Actions</th>
                
            </tr>
        </thread>
        <tbody>
            <% students.forEach(student => { %>
            <tr>
                <td><img src="<%= student.studentImage %>" alt="Student Photo" width="50px" height="50px" class="img-fluid" /></td>
                <td><%= student.rollNo %></td>
                <td><%= student.studentname %></td>
                <td><%= student.fatherName %></td>
                <td><%= student.motherName %></td>
                <td><%= student.course %></td>
                <td><%= student.branch %></td>
            <td><a href="/edit/student/page/<%= student._id %>" class="btn btn-warning">Edit</a>
           <a href="/delete/student/<%= student._id %>" class="btn btn-danger">Delete</a>
        </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
 </div>
 <%- include("./base/footer.ejs") %>